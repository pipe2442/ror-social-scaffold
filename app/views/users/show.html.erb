<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <%= render "form" %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>

<section class="users-section">
  <h3><%= @user.name %> Friends <br></h3>
  <ul class="users-list">
    <%= render @user.friends %>
  </ul>
</section>



<% if @user == current_user %>
  <% @user.friend_requests.each do |user| %> 
    <%= button_to "Accept #{user.name} request", user_friendship_path(verify_friendship(user)), method: :put %>
    <%= button_to "Delete #{user.name} request", user_friendship_path(verify_friendship(user)), method: :delete %>
  <% end %>
<% end %>


<section class="users-section">
  <h3><%= @user.name %> Pending friendship invitations: <br></h3>
  <ul class="users-list">
    <%= render @user.friend_requests %>
  </ul>
  <h3><%= @user.name %> Sended friendship invitations: <br></h3>
  <ul class="users-list">
    <%= render @user.pending_friends %>
  </ul>
</section>